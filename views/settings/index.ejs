<%- include('../partials/header'); %>

<workflow-view inline-template
               :initial-workflows="<%= JSON.stringify(workFlows) %>"
>
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-xl-12 mb-5 mb-xl-0">

                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0"><%= __('workflows list') %></h3>
                    </div>

                    <div class="col text-left">

                        <button class="btn btn-primary"
                                @click="$modal.show('addWorkflow')"
                        >
                            <%= __('add') %>
                        </button>
                    </div>
                </div>

                <hr>

                <div class="row">

                    <template v-if="workflows.length > 0">
                        <workflow-card v-for="workflow in workflows"
                                       class="col-4"
                                       :key="workflow.id"
                                       :name="workflow.name"
                                       :description="workflow.description"
                                       :id="workflow.workflow_id"
                        >
                        </workflow-card>
                    </template>

                    <p class="text-center text-muted w-100"
                       v-else>
                        <%= __('no available workFlows till now') %>
                    </p>

                </div>

            </div>
        </div>
    </div>
</workflow-view>

<!-- Footer -->

<%- include('../partials/footer'); %>

</div>

