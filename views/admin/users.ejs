<%- include("./partials/header") %>
<users-view inline-template
            initial-users="<%= JSON.stringify(users) %>">
   <div class="">
       <div class="main-panel">
           <!-- Navbar -->
           <%-include("./partials/navbar")%>
           <!-- End Navbar -->
           <div class="content">
               <div class="container-fluid">
                   <div class="row">
                       <div class="col-md-12">
                           <div class="card">
                               <div class="card-header card-header-primary">
                                   <h4 class="card-title ">
                                       Users
                                   </h4>
                               </div>
                               <div class="card-body">
                                   <div class="table-responsive">
                                       <table class="table">
                                           <thead class=" text-primary">
                                           <tr>
                                               <th>
                                                   ID
                                               </th>
                                               <th>
                                                   Name
                                               </th>
                                               <th>
                                                   email
                                               </th>
                                               <th>
                                                   Join Date
                                               </th>
                                               <th class="text-right">
                                                   <button type="button"
                                                           @click="$modal.show('addUser')"
                                                           class="btn btn-primary">
                                                       Add User
                                                   </button>
                                               </th>
                                           </tr>
                                           </thead>
                                           <tbody>
                                           <template v-if="users.length">
                                               <tr v-for="user in users"
                                                   :key="user.user_id">
                                                   <td v-text="user.user_id"></td>
                                                   <td v-text="user.name"></td>
                                                   <td v-text="user.email"></td>
                                                   <td>{{user.created_at|ago}}</td>
                                                   <td class="td-actions text-right">
                                                       <button type="button"
                                                               rel="tooltip"
                                                               title="Edit Task"
                                                               @click="edit(user)"
                                                               class="btn btn-primary btn-link btn-sm">
                                                           <i class="material-icons">edit</i>
                                                       </button>
                                                       <button type="button"
                                                               rel="tooltip"
                                                               title="Remove"
                                                               @click="confirm(user)"
                                                               class="btn btn-danger btn-link btn-sm"><i
                                                                   class="material-icons">close</i>
                                                       </button>
                                                   </td>
                                               </tr>
                                           </template>
                                           <template v-else>
                                               <tr>
                                                   <td class="text-muted text-center"
                                                       colspan="100%">
                                                       there in no users for now
                                                   </td>
                                               </tr>
                                           </template>
                                           </tbody>
                                       </table>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
       <%-include("./modals/user/all")%>
   </div>
</users-view>
<%- include("./partials/footer") %>