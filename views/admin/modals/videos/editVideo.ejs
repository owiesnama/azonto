<modal name="editVideo"
       width="50%"
       height="auto"
       :pivot-x=".5"
       :pivot-y=".5"
       classes="">
    <div class="card">
        <div class="card-header card-header-info">
            <h4 class="card-title">Edit video details</h4>
        </div>
        <div class="card-body">
            <form @submit.prevent="update">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="label">Title</label>
                            <input type="text"
                                   v-model="shouldPlayVideo.title"
                                   required
                                   class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="label">Email address</label>
                            <input type="email"
                                   v-model="shouldPlayVideo.email"
                                   required
                                   class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="label">Description</label>
                        <div class="form-group bmd-form-group">
                            <textarea class="form-control"
                                      cols="30"
                                      rows="10">
                                {{shouldPlayVideo.description}}
                            </textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="label">Category</label>
                        <select class="form-control"
                                v-model="shouldPlayVideo.category_id"
                                required>
                            <option></option>
                            <option v-for="category in categories"
                                    :value="category.category_id"
                                    v-text="category.name"></option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit"
                            class="btn btn-primary">Update
                    </button>
                    <button @click="$modal.hide('editVideo')" type="button" class="btn btn-default">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</modal>