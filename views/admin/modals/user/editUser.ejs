<modal  name="editUser"
        width="50%"
        height="auto"
        :pivot-x=".5"
        :pivot-y=".5"
        classes="">
    <div class="card">
        <div class="card-header card-header-info">
            <h4 class="card-title">Edit User</h4>
        </div>
        <div class="card-body">
            <form @submit.prevent="update">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="label">Full name</label>
                            <input type="text"
                                   v-model="user.name"
                                   required
                                   class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="label">Email address</label>
                            <input type="email"
                                   v-model="user.email"
                                   required
                                   class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <select name="role_id"
                                    class="form-control"
                                    v-model="user.role_id"
                                    required>
                                <option value="1">Admin</option>
                                <option value="2">Reviewer</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit"
                            class="btn btn-primary">Update</button>
                    <button @click="$modal.hide('editUser')" type="button" class="btn btn-default">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</modal>